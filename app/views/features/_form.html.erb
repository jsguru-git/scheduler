<div class="form_row">
    <div class="form_text">
        <%=f.label :name%>
    </div>
    <div class="form_field">
        <%=f.text_field :name, :class => 'text'%><span class="required"> *</span>
    </div>
    <div class="clearing"></div>
</div>

<div class="form_row">
    <div class="form_text">
        <%=f.label :description%>
    </div>
    <div class="form_field">
        <%=f.text_area :description, :class => 'text', :rows => 6%>
    </div>
    <div class="clearing"></div>
</div>
