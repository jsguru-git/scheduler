<%@page_title = 'Log in'%>
<div class="grid_container" id="blank_outer_container">
    <div class="grid_container_inner">

        
        
        <div class="blank_name_container">
            <h1><%=truncate @account.site_address.capitalize, :length => 14%></h1>
        </div>

        <div class="middle_container">
            <div class="inner_middle_container">
                
                <%if @account.first_login? -%>
                    <div class="session_message_container">
                        <p>This is where you can login to your new account, bookmark it now for the future.</p>
                    </div>
                <%end-%>
                
                <%= render(:partial => 'shared/notifications/flash', :locals => {:flash => flash}) if flash[:notice] || flash[:alert] %>

                <%= form_tag session_path do -%>
                    <div class="blank_form_row">
                        <div class="form_text">
                            <%= label_tag 'email:' %>
                        </div>
                        <div class="form_field">
                            <%= text_field_tag 'email', @email, :class => 'text' %>
                        </div>
                        <div class="clearing"></div>
                    </div>

                    <div class="blank_form_row">
                        <div class="form_text">
                            <%= label_tag 'password:' %>
                        </div>
                        <div class="form_field">
                            <%= password_field_tag 'password', nil, :class => 'text' %>
                        </div>
                        <div class="clearing"></div>
                    </div>

                    <div class="blank_form_row remember_me_container">
         
                        <%= check_box_tag 'remember_me', '1', @remember_me %>
                        <%= label_tag 'remember_me', 'Remember me', :class =>'label' %>

                    </div>

                    <div class="blank_form_row last_row">
                        <%= submit_tag 'Log in', :class => 'submit' %>
                        <span class="">&nbsp;&nbsp;<%=link_to 'Forgotten your password?', new_password_reset_path%></span>
                    </div>
                <% end -%>
            </div>
        </div>

    </div>
</div>