<h2>Edit rollover reason</h2>

<%= form_for [:invoice, @project, @rollover], remote: true do |f| %>

  <div class="form_row_v2">
      <div class="form_text">
          <%= f.label :reason_for_date_change %>
      </div>
      <div class="form_field">
          <%= f.text_field :reason_for_date_change, class: 'text'%>
      </div>
      <div class="clearing"></div>
  </div>

  <div class="submit_container_v2">
      <%= f.submit 'Update', :class => 'submit' %>
      &nbsp;<span class="small_text"> or <%= link_to 'Cancel', rollover_reports_payment_profiles_path, class: 'lightbox_close', 'data-spinner' => 'new_profile_form_spinner' %></span>
      &nbsp;<%= spinner_tag('new_profile_form_spinner') %>
  </div>

<% end %>