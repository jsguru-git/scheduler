// Add content to page
<%if @task.feature.present? -%>
	$("#<%=dom_id(@task.feature)%> #task_list").append("<%= escape_javascript(render(:partial => 'tasks/display_task', :locals => {:task => @task})) %>");
<%else -%>
	$("#no_associated_features #task_list").append("<%= escape_javascript(render(:partial => 'tasks/display_task', :locals => {:task => @task})) %>");
<%end-%>

  $('.empty').hide();
  $('.task_list.header').show();
  $('.placeholder').show();

// Open lightbox
main_lightbox.close();

// Highlight
$('#<%=dom_id(@task)%>').delay(300).effect("highlight", {}, 3000);
task_header_bar_visibility();