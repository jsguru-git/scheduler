<%@page_title = 'All projects'%>
<%@second_nav = projects_second_nav('all')%>

<div class="standard_two_col">
    <div class="cell_1">
        <%=render :partial => 'shared/page_heading'%>
        
        <%=render :partial => 'search_container', :locals => {:search_link => all_projects_path, :team_search => true}%>
        
        <%=render :partial => 'shared/pagination/paginate', :object => @projects%>

        <%if @projects.present? -%>
            <ul class="standard_full_list">
                <%@projects.each do |project|%>
                    <%=render :partial => 'display_project_list', :locals => {:project => project, :full_details => false}%>
                <%end-%>
            </ul>
            <div class="clearing"></div>
        <%else-%>
            <p>No projects found.</p>
        <%end-%>
        
        <%=render :partial => 'shared/pagination/paginate', :object => @projects%>
    </div>

    <div class="cell_2">
        <div id="action_links">
            <%=link_to 'Add project', new_project_path%>
        </div>
    </div>

</div>